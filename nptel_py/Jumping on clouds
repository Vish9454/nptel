def jumpingOnClouds(c):
    count=0;n=0
    while n<(len(c)-2):
        if c[n+2]==0:
            count+=1
            n=n+2
        elif c[n+1]==0:
            count+=1
            n=n+1
    if len(c)==2 and c[0]==0:
        count+=1
    if c[len(c)-2]==0 and c[len(c)-3]!=0:
        count+=1
    print(count)

jumpingOnClouds([0,0])
