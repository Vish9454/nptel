def countingValleys(n, s):
    count=0;step_count=0
    flag=False
    for i in range(len(s)):
        if s[i]=='U':
            count+=1
            if count==0:
                step_count+=1
        else:
            count-=1


    print(step_count)
'''    s="DDUUDDUDUUUD""UDDDUDUU"UDUUUDUDDD""DDUDDUUDUU"    '''
s="UDUUUDUDDD"
countingValleys(s="DUDDUUUUDDD",n=11)
